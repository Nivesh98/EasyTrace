<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/busIDDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BusID:"/>
            <TextView
                android:id="@+id/busIDTextDialog"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/busRouteDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route:"/>
            <TextView
                android:id="@+id/busRouteTextDialog"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/busTimeDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"/>
            <TextView
                android:id="@+id/busTimeTextDialog"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/busSeatDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats:"/>
            <TextView
                android:id="@+id/busSeatTextDialog"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/busPaymentDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment:"/>
            <TextView
                android:id="@+id/busPaymentTextDialog"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/busRemainDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remain:"/>
            <TextView
                android:id="@+id/busRemainTextDialog"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/okDialogBtn"
            android:layout_width="54dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:background="@drawable/ok_dialog"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>